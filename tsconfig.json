{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}